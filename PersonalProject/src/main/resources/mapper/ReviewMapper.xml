<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koreait.PsnProject.dao.ReviewDAO">

    <!-- 리뷰 등록 -->
    <insert id="insertReview" parameterType="com.koreait.PsnProject.dto.ReviewDTO">
        INSERT INTO review (hospital_id, member_id, rating, comment)
        VALUES (#{hospitalId}, #{memberId}, #{rating}, #{comment})
    </insert>

    <!-- 병원별 리뷰 조회 -->
    <select id="getReviewsByHospitalId" parameterType="int" resultType="com.koreait.PsnProject.dto.ReviewDTO">
        SELECT r.*, m.nickname
        FROM review r
        JOIN member m ON r.member_id = m.id
        WHERE hospital_id = #{hospitalId}
        ORDER BY r.created_at DESC
    </select>

    <!-- 리뷰 삭제 -->
    <delete id="deleteReview" parameterType="int">
        DELETE FROM review WHERE id = #{id}
    </delete>

</mapper>