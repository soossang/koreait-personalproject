<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koreait.PsnProject.dao.AdminDAO">

    <select id="getAllUsers" resultType="com.koreait.PsnProject.dto.UserDTO">
        SELECT * FROM member
    </select>

    <delete id="deleteUser" parameterType="long">
        DELETE FROM member WHERE id = #{id}
    </delete>

    <select id="getReportedBoards" resultType="com.koreait.PsnProject.dto.BoardDTO">
        SELECT * FROM admin_report ORDER BY created_at DESC
    </select>

</mapper>